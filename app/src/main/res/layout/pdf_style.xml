<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:background="@color/listPDFVid"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/pdf"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:id="@+id/img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pdf_name"
            android:layout_toEndOf="@id/img"
            android:layout_centerVertical="true"
            android:text="@string/pdf_file_name"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.02"
            android:includeFontPadding="false"
            android:textColor="@color/pdfVidText"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"/>

        <ImageView
            android:id="@+id/pdf_download"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignEnd="@+id/pdf_name"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_baseline_cloud_download_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>